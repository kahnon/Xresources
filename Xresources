    !!use dynamic colors
    xterm*dynamicColors: true

    !!some nicer colors for xterm
    !!colors generated by www.terminal.sexy
    !!color scheme hybrid.txt
    ! special
    *.foreground:   #c5c8c6
    *.background:   #1d1f21
    *.cursorColor:  #c5c8c6

    ! black
    *.color0:       #282a2e
    *.color8:       #373b41

    ! red
    *.color1:       #a54242
    *.color9:       #cc6666

    ! green
    *.color2:       #8c9440
    *.color10:      #b5bd68

    ! yellow
    *.color3:       #de935f
    *.color11:      #f0c674

    ! blue
    *.color4:       #5f819d
    *.color12:      #81a2be

    ! magenta
    *.color5:       #85678f
    *.color13:      #b294bb

    ! cyan
    *.color6:       #5e8d87
    *.color14:      #8abeb7

    ! white
    *.color7:       #707880
    *.color15:      #c5c8c6

    ! put font stuff here
    ! Use a nice truetype font and size by default... 
    !!  xterm*faceName: DejaVu Sans Mono Book
      xterm*faceName: terminus-12
    !!  xterm*faceName: Anonymous Pro Bold
      xterm*faceSize: 11
      xterm*boldMode: true

    ! font settings for beautiful fonts
      Xft.dpi: 96
      Xft.antialias: true
      Xft.rgba: rgb
      Xft.hinting: true
      Xft.hintstyle: hintslight
    
    ! login shell is the default
      xterm*loginShell: true
    ! set scrollback
      xterm*saveLines: 15000

    ! make other programs realize a color scheme is used
      xterm*termName: xterm-256color
                                 
    ! double-click to select whole URLs
      xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
    
    ! right hand side scrollbar...
    ! put scroll stuff here
      xterm*scrollKey: true
      xterm*rightScrollBar: true
      xterm*ScrollBar: true
      xterm*jumpScroll: true
      xterm*multiScroll: true
    ! stop output to terminal from jumping down to bottom of scroll again
      xterm*scrollTtyOutput: false

    ! misc stuff
    ! behaviour for copy/paste
      xterm*allowPasteControls: true
    ! no toolbar
      xterm*toolBar: false
